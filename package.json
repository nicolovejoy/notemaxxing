{
  "name": "notemaxxing",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "node scripts/generate-build-info.js && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "precommit": "npm run lint && npm run type-check",
    "prepare": "husky"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "0.57.0",
    "@tanstack/react-query": "5.85.3",
    "@tiptap/react": "3.0.7",
    "@tiptap/starter-kit": "3.0.7",
    "@types/uuid": "10.0.0",
    "firebase": "12.9.0",
    "firebase-admin": "13.6.1",
    "immer": "10.1.1",
    "lucide-react": "0.532.0",
    "marked": "16.1.1",
    "next": "15.4.8",
    "openai": "5.11.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "uuid": "11.1.0",
    "zustand": "5.0.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.2.0",
    "@tailwindcss/postcss": "4.1.6",
    "@tanstack/react-query-devtools": "5.85.3",
    "@types/node": "20.17.15",
    "@types/react": "19.0.7",
    "@types/react-dom": "19.0.3",
    "eslint": "9.19.0",
    "eslint-config-next": "15.4.4",
    "husky": "9.1.7",
    "lint-staged": "16.1.2",
    "prettier": "3.6.2",
    "tailwindcss": "4.1.6",
    "typescript": "5.7.3"
  },
  "lint-staged": {
    "app/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "lib/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "components/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
