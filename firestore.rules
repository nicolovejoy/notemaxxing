rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Deny all by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Helper: request is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper: user owns the resource
    function isOwner() {
      return isAuthenticated() && resource.data.owner_id == request.auth.uid;
    }

    // Helper: user is setting themselves as owner on create
    function isCreatingAsOwner() {
      return isAuthenticated() && request.resource.data.owner_id == request.auth.uid;
    }

    // Folders: owner can CRUD; shared users rely on API layer for permission checks
    match /folders/{folderId} {
      allow read: if isAuthenticated();
      allow create: if isCreatingAsOwner();
      allow update: if isOwner();
      allow delete: if isOwner();
    }

    // Notebooks: owner can CRUD; shared access enforced by API layer
    match /notebooks/{notebookId} {
      allow read: if isAuthenticated();
      allow create: if isCreatingAsOwner();
      allow update: if isOwner();
      allow delete: if isOwner();
    }

    // Notes: owner can CRUD; shared access enforced by API layer
    match /notes/{noteId} {
      allow read: if isAuthenticated();
      allow create: if isCreatingAsOwner();
      allow update: if isOwner();
      allow delete: if isOwner();
    }

    // Permissions: only the resource owner or the granted user can read
    // Only API (admin SDK) creates/updates/deletes permissions
    match /permissions/{permissionId} {
      allow read: if isAuthenticated() && (
        resource.data.user_id == request.auth.uid ||
        resource.data.granted_by == request.auth.uid
      );
      allow write: if false;
    }

    // Invitations: only API (admin SDK) manages invitations
    match /invitations/{invitationId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Invitation previews: public read (unauthenticated users need to see these)
    match /invitationPreviews/{previewId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
